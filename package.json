{
  "name": "veloxapi",
  "version": "0.2.0",
  "description": "An ultra-fast, zero-dependency Node.js web framework built entirely with Node.js built-in modules",
  "main": "lib/index.js",
  "type": "module",
  "scripts": {
    "start": "node examples/hello-world/server.js",
    "dev": "nodemon examples/hello-world/server.js",
    "test": "node --experimental-vm-modules node_modules/.bin/jest --forceExit",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "benchmark": "node benchmarks/comparison.js",
    "benchmark:routing": "node benchmarks/routing.js",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\""
  },
  "keywords": [
    "nodejs",
    "web-framework",
    "api",
    "server",
    "performance",
    "zero-dependency",
    "fast",
    "lightweight",
    "http",
    "https",
    "routing",
    "middleware",
    "radix-tree",
    "streaming"
  ],
  "author": "VeloxAPI Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/veloxapi/veloxapi.git"
  },
  "bugs": {
    "url": "https://github.com/veloxapi/veloxapi/issues"
  },
  "homepage": "https://github.com/veloxapi/veloxapi#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "eslint": "^9.12.0",
    "prettier": "^3.3.0",
    "jest": "^29.7.0",
    "autocannon": "^7.15.0",
    "nodemon": "^3.1.0"
  }
}
